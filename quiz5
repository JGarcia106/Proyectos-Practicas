import java.util.Random;
import javax.swing.JOptionPane;

/**
 * Clase que representa la tienda de abarrotes y maneja las ventas semanales.
 */
class Tienda {
    private String[] productos;
    private int[][] ventas;
    private static final int DIAS_SEMANA = 7;
    
    /**
     * Constructor que inicializa la tienda con los productos y genera las ventas aleatoriamente.
     * @param cantidadProductos Número de productos a registrar.
     */
    public Tienda(int cantidadProductos) {
        productos = new String[cantidadProductos];
        ventas = new int[DIAS_SEMANA][cantidadProductos];
        ingresarProductos();
        generarVentasAleatorias();
    }
    
    /**
     * Método para ingresar los nombres de los productos.
     */
    private void ingresarProductos() {
        for (int i = 0; i < productos.length; i++) {
            productos[i] = JOptionPane.showInputDialog("Ingrese el nombre del producto " + (i + 1) + ":");
        }
    }
    
    /**
     * Método para generar las ventas aleatoriamente entre 0 y 9.
     */
    private void generarVentasAleatorias() {
        Random random = new Random();
        for (int i = 0; i < DIAS_SEMANA; i++) {
            for (int j = 0; j < productos.length; j++) {
                ventas[i][j] = random.nextInt(10);
            }
        }
    }
    
    /**
     * Método para calcular el total de ventas por producto.
     * @return Un array con el total de ventas por cada producto.
     */
    public int[] calcularTotalVentasPorProducto() {
        int[] totalVentas = new int[productos.length];
        for (int j = 0; j < productos.length; j++) {
            for (int i = 0; i < DIAS_SEMANA; i++) {
                totalVentas[j] += ventas[i][j];
            }
        }
        return totalVentas;
    }
    
    /**
     * Método para determinar el día con mayores ventas.
     * @return Índice del día con mayores ventas.
     */
    public int obtenerDiaMayorVentas() {
        int maxVentas = 0, indiceDia = 0;
        for (int i = 0; i < DIAS_SEMANA; i++) {
            int sumaVentasDia = 0;
            for (int j = 0; j < productos.length; j++) {
                sumaVentasDia += ventas[i][j];
            }
            if (sumaVentasDia > maxVentas) {
                maxVentas = sumaVentasDia;
                indiceDia = i;
            }
        }
        return indiceDia;
    }
    
    /**
     * Método para encontrar el producto más vendido.
     * @return Nombre del producto más vendido.
     */
    public String obtenerProductoMasVendido() {
        int[] totalVentas = calcularTotalVentasPorProducto();
        int maxVentas = 0, indiceProducto = 0;
        for (int j = 0; j < totalVentas.length; j++) {
            if (totalVentas[j] > maxVentas) {
                maxVentas = totalVentas[j];
                indiceProducto = j;
            }
        }
        return productos[indiceProducto];
    }
    
    /**
     * Método para mostrar los resultados en pantalla.
     */
    public void mostrarResultados() {
        int[] totalVentas = calcularTotalVentasPorProducto();
        StringBuilder mensaje = new StringBuilder("Total de ventas por producto:\n");
        for (int i = 0; i < productos.length; i++) {
            mensaje.append(productos[i]).append(": ").append(totalVentas[i]).append("\n");
        }
        
        String[] dias = {"Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"};
        int diaMayorVentas = obtenerDiaMayorVentas();
        String productoMasVendido = obtenerProductoMasVendido();
        
        mensaje.append("\nDía con mayores ventas: ").append(dias[diaMayorVentas]).append("\n");
        mensaje.append("Producto más vendido: ").append(productoMasVendido);
        
        JOptionPane.showMessageDialog(null, mensaje.toString());
    }
}

// Clase principal con el método main
public class SistemaTienda {
    public static void main(String[] args) {
        int cantidadProductos = Integer.parseInt(JOptionPane.showInputDialog("Ingrese la cantidad de productos a registrar:"));
        Tienda tienda = new Tienda(cantidadProductos);
        tienda.mostrarResultados();
    }
}
